<header>
    {% if utilisateur is null %}
        <img src="{{ asset('image/bandeau_visiteur.jpg') }}" alt="Image du bandeau supérieur d'un visiteur">
    {% else %}
        {% if utilisateur.isadmin == 1 %}
            <img src="{{ asset('image/bandeau_administrateur.jpg') }}" alt="Image du bandeau supérieur d'un administrateur">
        {% else %}
            <img src="{{ asset('image/bandeau_client.jpg') }}" alt="Image du bandeau supérieur d'un client authentifié">
        {% endif %}
    {% endif %}
</header>

