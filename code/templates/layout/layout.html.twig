{% extends 'main/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">
{% endblock %}

{% block body %}
    <div id="banner_top">
        {{ render(controller('App\\Controller\\BannerTopController::bannerAction')) }}
    </div>
    <div id="menu">
        {{ render(controller('App\\Controller\\MenuController::menuAction')) }}
    </div>
    <div id="flash">
        {% for msg in app.session.flashBag.get('info') %}
            <h2 id="flash_info">{{ msg }}</h2>
        {% endfor %}
        {% for msg in app.session.flashBag.get('error') %}
            <h2 id="flash_error">{{ msg }}</h2>
        {% endfor %}
    </div>
    <div id="container">
        {% block container %}{% endblock %}
    </div>
    <div id="banner_bottom">
        <footer>
            <img src="{{ asset('image/bandeau_bas.jpg') }}" alt="Image du bandeau de bas de page">
        </footer>
    </div>
{% endblock %}

