{% extends 'layout/layout.html.twig' %}

{% block title %}
    Bienvenue
{% endblock %}

{% block stylesheets_page %}
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}" type="text/css">
{% endblock %}

{% block body_page %}
    {% for msg in app.session.flashBag.get('info') %}
        <h2>{{ msg }}</h2>
    {% endfor %}

    <h1>Bienvenue
        {% if utilisateur is null %}
            anonyme
        {% else %}
            {% if utilisateur.isadmin == 1 %}
                administrateur
            {% else %}
                client {{ utilisateur.prenom }}
            {% endif %}
        {% endif %}
        !</h1>
{% endblock %}

